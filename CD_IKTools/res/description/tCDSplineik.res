CONTAINER tCDSplineIK
{
	NAME tCDSplineIK;
	DEFAULT 1;
	GROUP
	{
		BUTTON SPLIK_PURCHASE {}
	}
	INCLUDE Texpression;

	GROUP ID_TAGPROPERTIES
	{
		
		GROUP
		{
			COLUMNS 1;
			
			BOOL SPLIK_USE { }
			REAL SPLIK_BLEND { UNIT PERCENT; MIN 0.0; MAX 100.0; CUSTOMGUI REALSLIDER;}
		}	
		SEPARATOR { LINE; }
		GROUP
		{
			COLUMNS 1;

			BOOL SPLIK_SHOW_LINES { }
			COLOR SPLIK_LINE_COLOR {}
		}
		SEPARATOR { LINE; }
		GROUP
		{
			COLUMNS 2;
			
			LONG SPLIK_BONES_IN_GROUP	{ MIN 1; }
			LONG SPLIK_POLE_AXIS
			{
				CYCLE
				{
					SPLIK_POLE_X;
					SPLIK_POLE_Y;
					SPLIK_POLE_NX;
					SPLIK_POLE_NY;
				}
			
			}
			LONG SPLIK_SOLUTION
			{
				CYCLE
				{
					SPLIK_USE_SOLVER;
					SPLIK_USE_ROTATION;
					SPLIK_USE_TARGETS;
				}
			}
		}
		GROUP
		{
			COLUMNS 2;

			BOOL SPLIK_CONNECT_BONES { }
			BOOL SPLIK_CONNECT_NEXT { }
		}
		SEPARATOR { LINE; }
		GROUP
		{			
			COLUMNS 2;

			BOOL SPLIK_USE_EXTRN_CONT { }
			BOOL SPLIK_TRUE_SPLINE_IK { }
		}		
	}
	GROUP SPLIK_SOLVER_GROUP
	{
		DEFAULT	0;
		
		GROUP 
		{ 
			COLUMNS 1;
			LINK SPLIK_SOLVER_LINK
			{ 
				ANIM MIX; ACCEPT { Obase; } 
				REFUSE { Osky; Oforeground; } 
			} 
		}
	}

	GROUP SPLIK_SPLINE_GROUP
	{
		GROUP 
		{ 
			LINK  SPLIK_SPLINE_LINK
			{ 
				ANIM MIX; ACCEPT { Ospline; }
			}
		}

	}
	
	GROUP SPLIK_CONTROL_GROUP
	{
		DEFAULT	1;
		
		GROUP
		{
			COLUMNS 3;

			BUTTON SPLIK_ADD_GOAL {}
			BUTTON SPLIK_SUB_GOAL {}
			
			LONG SPLIK_INTERPOLATION
			{
				CYCLE
				{
					SPLIK_SHORTEST;
					SPLIK_AVERAGE;
					SPLIK_LONGEST;
				}
			}
		}
		SEPARATOR { LINE; }
	}
	GROUP SPLIK_STRETCH_GROUP
	{
		GROUP
		{
			COLUMNS 3;
			
			BUTTON SPLIK_SET_LENGTH {}
			BUTTON SPLIK_CLEAR_LENGTH {}
			BUTTON SPLIK_RESET_LENGTH {}
		}
		SEPARATOR {} 
		GROUP
		{
			COLUMNS 1;
			
			REAL SPLIK_LENGTH_BIAS { UNIT PERCENT; MIN 0.0; MAX 100.0; CUSTOMGUI REALSLIDER; }
		}
		SEPARATOR { LINE; } 
		GROUP
		{
			COLUMNS 1;
			
			BOOL SPLIK_SQUASH_N_STRETCH { }
			BOOL SPLIK_CHANGE_VOLUME { }
		}
		GROUP
		{
			COLUMNS 1;
			
			REAL SPLIK_VOLUME_STRENGTH { UNIT PERCENT; MIN 0.0; MAXSLIDER 100.0; CUSTOMGUI REALSLIDER;}
		}
		SEPARATOR {} 
		GROUP
		{
			COLUMNS 3;
			
			BOOL SPLIK_CLAMP_SQUASH { }
			REAL SPLIK_SQUASH_DIST { UNIT REAL; MIN 0.0; }
			BUTTON SPLIK_SET_SQUASH_DIST {}
			BOOL SPLIK_CLAMP_STRETCH { }
			REAL SPLIK_STRETCH_DIST { UNIT REAL; MIN 0.0; }
			BUTTON SPLIK_SET_STRETCH_DIST {}
		}
		SEPARATOR {} 
		GROUP
		{
			COLUMNS 2;
			
			BOOL SPLIK_USE_BIAS_CURVE { }
			BOOL SPLIK_MIX_VOLUME { }
		}
		SEPARATOR {} 
		GROUP
		{
			COLUMNS 1;
			
			SPLINE SPLIK_BIAS_CURVE
			{ 
				SHOWGRID_H; 
				SHOWGRID_V; 

				GRIDSIZE_H 8; 
				GRIDSIZE_V 8; 

				HAS_PRESET_BTN; 

				MINSIZE_H 120;
				MINSIZE_V 80; 

				EDIT_H; 
				EDIT_V; 

				LABELS_H; 
				LABELS_V; 

				HAS_ROUND_SLIDER;

				X_MIN 0; 
				X_MAX 1.00; 

				Y_MIN 0; 
				Y_MAX 1.00; 

				X_STEPS 0.1; 
				Y_STEPS 0.1;
			}	
		}
	}
}
